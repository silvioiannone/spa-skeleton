{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
    },
    "files": [
        "resources/ts/App.ts"
    ],
    "include": [
        "resources/ts/**/*",
        "resources/ts/**/*.vue",
        "node_modules/spa-skeleton/src/**/*",
        "node_modules/spa-skeleton/src/**/*.vue",
        "node_modules/spa-skeleton/types/**/*",
    ],
    "compileOnSave": false
}
