{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "../..",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "target": "ES6",
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "esModuleInterop": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "noImplicitAny": false,
    },
    "include": [
        "../../resources/ts/**/*",
        "../../resources/ts/**/*.vue",
        "src/**/*",
        "src/**/*.vue"
    ]
}
